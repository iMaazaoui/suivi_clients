<div class="page-header">
  <h1>Liste des utilisateurs</h1>
</div>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Utilisateurs</div>
  <div class="panel-body">
  	  <%= link_to("Add New Admin User", {:action => 'new'}, :class => 'action new') %>
  	  <div><%= pluralize(@users.size, 'administrateur') %> trouvÃ©</div>
  </div>
  <!-- Table -->
  <table class="table">
    <tr class="header">
      <th>Nom</th>
      <th>Prenom</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @users.each do |admin_user| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= admin_user.nom %></td>
      <td><%= admin_user.prenom %></td>
      <td><%= mail_to(admin_user.email) %></td>
      <td class="actions">
        <%= link_to("Edit", {:action => 'edit', :id => admin_user.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => admin_user.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>